<!-- class="sortable"   for tables!! -->
<%= form_tag locations_path, :method => :get do %>
  <p>
    <%= label_tag :search, 'Location' %>
    <%= text_field_tag :search, params[:search] %>
    <%= label_tag :radius %>
    <%= text_field_tag :radius, params[:radius], value: 50 %>
    <%= submit_tag "Search Near" %>
  </p>
<% end %>

<!-- links are still broken -->
<% if params[:search].present? %>
  <% @fundings.each do |funding| %>
    <%= link_to "#{funding.funding_date} (#{funding.company.name})" %>
  <% end %>
  <% @companies.each do |company| %>
    <%= link_to company.name %>
  <% end %>
<% end %>

<% if params[:search].present? %>
<%= render :partial => "map" %>
<% end %>
