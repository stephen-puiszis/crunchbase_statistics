<div class="label">
    <h3 class= "container">Listing investments</h1>
</div>


<table>
  <tr>
    <th>Funding ID </th>
    <th>Company Being Funded</th>
    <th>Type</th>
    <th>Investable Id</th>
    <th>Perma</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @investments.each do |investment| %>
    <% if investment.investable==nil %>
        <% next %>
    <% end %>
  <tr>
    <td><%= investment.funding_id %></td>
    <td><%= investment.funding.company.name %></td>
    <td><%= investment.investable_type %></td>
    <td><%= investment.investable_id %></td>
    <td><%= investment.investable.perma %></td>
    <td><%= link_to 'Show', investment %></td>
    <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
    <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
