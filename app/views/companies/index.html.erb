<div class="label">
    <h3 class= "container">Listing companies</h1>
</div>
<section class="container">
  <table class= "sortable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Total Investments</th>
        <th>Industry</th>
      </tr>
    </thead>
    <% @companies.each do |company| %>
    <tbody>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td class="currency"><%= number_to_currency(company.total_investments, unit: "$") %></td>
        <td><%= link_to Industry.find_by_id(company.industry_id).name, Industry.find_by_id(company.industry_id)%></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <br />
  <%= link_to 'New Company', new_company_path %>
