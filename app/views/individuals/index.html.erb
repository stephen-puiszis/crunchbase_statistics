<div class="label">
  <h3 class= "container">Angel Investing</h1>
</div>
<section class="container group under">
  <div class="grid_12">
    <table class="table table-hover sortable">
      <caption>LTM Angel Funding</caption>
      <thead>
        <tr>
          <th>Quarter</th>
          <th>Amount*</th>
          <th>Volume</th>
          <th>Avg. Investment</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Q2 2013</td>
          <td class="currency"> <%= format_mil(Funding.quarterly_fundings(Time.now().year, 'q2').multiple_funding_codes('angel', 'seed').sum('funding_amount')) %></td>
          <td> <%= Funding.quarterly_fundings(Time.now().year, 'q2').multiple_funding_codes('angel', 'seed').count %></td>
          <td class="currency"> <%= format_mil(Funding.quarterly_fundings(Time.now().year, 'q2').multiple_funding_codes('angel', 'seed').average('funding_amount')) %></td>
        </tr>
        <tr>
